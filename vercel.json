{
    "version": 2,
    "rewrites": [
        { "source": "/(.*)", "destination": "/index.html" }
    ],
    "builds": [
      {
        "src": "client/package.json",
        "use": "@vercel/static-build",
        "config": {
          "outputDirectory": "client/build",
          "buildCommand": "npm run build --prefix client"
        }
      },
      {
        "src": "server/*.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/server/$1"
      },
      {
        "src": "/(.*)",
        "dest": "/client/$1"
      }
    ]
}